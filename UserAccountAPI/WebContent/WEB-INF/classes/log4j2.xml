<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
	<Properties>
		<Property name="log-path">D:/temp/logs</Property>
		<Property name="log-filename">UserDirectoryAPI</Property>
	</Properties>

	<Appenders>
		<RollingFile name="file-log" fileName="${log-path}/${log-filename}.log"
			filePattern="${log-path}/${log-filename}-%d{yyyy-MM-dd}.log">
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%-21t|%c{1}:%L| %msg%n
				</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
		</RollingFile>

		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.yggdrasil" level="debug" additivity="false">
			<appender-ref ref="file-log" level="error" />
		</Logger>
		<Root level="debug" additivity="false">
			<appender-ref ref="file-log" />
		</Root>
	</Loggers>
</Configuration>
